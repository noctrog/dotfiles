# Press $mod+o followed by either f, t, Escape or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher [Application Launcher] 
bindsym $mod+o mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec firefox; mode "default"

    bindsym r exec urxvt -e ranger; mode "default"
    bindsym $mod+r exec urxvt -name float_term -e ranger; mode "default"
 
    bindsym m exec urxvt -e cmus; mode "default"
    bindsym $mod+m exec urxvt -name float_term -e cmus; mode "default"

    bindsym c exec urxvt -e calcurse; mode "default"
    bindsym $mod+c exec urxvt -name float_term -e calcurse; mode "default"

    bindsym t exec telegram-desktop; mode "default" 

    bindsym v exec urxvt -e zsh -i -c vim; mode "default"
    bindsym $mod+v exec urxvt -name float_term -e vim; mode "default"
    bindsym g exec gvim; mode "default"
    bindsym $mod+g exec gvim; mode "default"
		
    bindsym z exec zathura; mode "default"		

    bindsym n exec nautilus ; mode "default"
    bindsym $mod+n exec nautilus ; mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
