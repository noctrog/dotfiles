#!/bin/sh

# TODO - Update CV

# Update last 5 blog entries in index.html
list=$(grep -m 1 -A 10 "<h2>.*</h2>" $HOME/Documents/noctrogxyz/blogindex.html | grep "<li>" | \
       sed 5q | tr -d '\n' | sed -e 's/[\/&]/\\&/g')
sed -i "s/<!-- BLOG -->.*/<!-- BLOG -->$list/g" $HOME/Documents/noctrogxyz/index.html

# Deploy to server
# -a: archive mode
# -v: verbose
# -r: recursive
# -z: compress
# -P: show progress
rsync -avrzP --rsh='ssh' $HOME/Documents/noctrogxyz root@noctrog.xyz:/var/www/
