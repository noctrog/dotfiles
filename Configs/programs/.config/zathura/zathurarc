# Dracula color theme for Zathura
# link:( https://github.com/dracula/dracula-theme#color-palette )
# Swaps Foreground for Background to get a light version
# Comment after the color is the color's name, as it appears in the palette


# NORD
# Light/Default mode settings:
#
#set notification-error-bg       "#BF616A" # Red
#set notification-error-fg       "#D8DEE9" # Foreground
#set notification-warning-bg     "#D08770" # Orange
#set notification-warning-fg     "#44475a" # Selection
#set notification-bg             "#2e3440" # Background
#set notification-fg             "#D8DEE9" # Foreground

#set completion-bg               "#2e3440" # Background
#set completion-fg               "#689d6a" # Comment
#set completion-group-bg         "#2e3440" # Background
#set completion-group-fg         "#689d6a" # Comment
#set completion-highlight-bg     "#44475a" # Selection
#set completion-highlight-fg     "#D8DEE9" # Foreground

#set index-bg                    "#2e3440" # Background
#set index-fg                    "#D8DEE9" # Foreground
#set index-active-bg             "#44475a" # Current Line
#set index-active-fg             "#D8DEE9" # Foreground

#set inputbar-bg                 "#2e3440" # Background
#set inputbar-fg                 "#D8DEE9" # Foreground
#set statusbar-bg                "#2e3440" # Background
#set statusbar-fg                "#D8DEE9" # Foreground

#set highlight-color             "#D08770" # Orange
#set highlight-active-color      "#83a598" # Pink

#set default-bg                  "#2e3440" # Background
#set default-fg                  "#D8DEE9" # Foreground

#set render-loading              true
#set render-loading-fg           "#2e3440" # Background
#set render-loading-bg           "#D8DEE9" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#2e3440" # Background
set recolor-darkcolor           "#D8DEE9" # Foreground

# GRUVBOX
# Light/Default mode settings:
# 
#
set notification-error-bg       "#cc241d" # Red
set notification-error-fg       "#fbf1c7" # Foreground
set notification-warning-bg     "#d79921" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#161819" # Background
set notification-fg             "#fbf1c7" # Foreground

set completion-bg               "#161819" # Background
set completion-fg               "#689d6a" # Comment
set completion-group-bg         "#161819" # Background
set completion-group-fg         "#689d6a" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#fbf1c7" # Foreground

set index-bg                    "#161819" # Background
set index-fg                    "#fbf1c7" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#fbf1c7" # Foreground

set inputbar-bg                 "#161819" # Background
set inputbar-fg                 "#fbf1c7" # Foreground
set statusbar-bg                "#161819" # Background
set statusbar-fg                "#fbf1c7" # Foreground

set highlight-color             "#d79921" # Orange
set highlight-active-color      "#83a598" # Pink

set default-bg                  "#161819" # Background
set default-fg                  "#fbf1c7" # Foreground

set render-loading              true
set render-loading-fg           "#161819" # Background
set render-loading-bg           "#fbf1c7" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#161819" # Background
set recolor-darkcolor           "#fbf1c7" # Foreground

# Startup options
#
#
set adjust-open width
set recolor true

map <Left> navigate previous
map <Right> navigate next
map <C-=> zoom in
map <C--> zoom out
map B jumplist backward
map b jumplist forward
