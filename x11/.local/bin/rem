#!/bin/sh

# This script is called on startup to remap keys

# Increase key speed
xset r rate 300 50

# Dvorak keyboard with Latin variant, Caps Lock remap to Super
# setxkbmap us -variant dvorak-intl -option caps:super # 
setxkbmap us -variant dvorak-intl -option ctrl:nocaps # 
# Caps Lock remap to Escape when released quickly
# killall xcape 2>/dev/null ; xcape -e 'Super_L=Escape' &

